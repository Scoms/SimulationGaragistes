
@model List<SimulationGaragistesDAL.Model.Modeles>
@Html.Partial("Menu")


<div class="col-md-8">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h1>Liste des modèles</h1>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <tr>
                    <th>Modele</th>
                    <th>Marque</th>
                    <th>Révisions</th>
                    <th>Actions</th>
                </tr>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.label</td>
                            <td>@item.Marques.label</td>
                            <td>@Html.ActionLink("(" + item.Révisions.Count() + ") révisions", "seeRevisions", new { id = item.id }, null)</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-default" href="@Url.Action("Insert", "Modeles", new { id = item.id })">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </div>
                                <div class="btn-group">
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Modeles", new { id = item.id })">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>
<div class="col-md-2">
    @if (TempData["success"] != null)
    {
        <p class="alert alert-success">@TempData["success"]</p>
    }
    @if (TempData["error"] != null)
    {
        <p class="alert alert-danger">    @TempData["error"]</p>
    }
</div>

