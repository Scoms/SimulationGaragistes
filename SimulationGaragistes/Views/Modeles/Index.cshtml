<h1>Liste des modèles</h1>

@model List<SimulationGaragistesDAL.Model.Modeles>
@Html.Partial("Menu")

<table class="table table-striped">
    <tr>
        <th>Modele</th>
        <th>Marque</th>
        <th>Révisions</th>
        <th></th>
        <th></th>
    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.label</td>
                <td>@item.Marques.label</td>
                <td>@Html.ActionLink("(" + item.Révisions.Count() + ") révisions", "seeRevisions", new { id = item.id }, null)</td>
                <td>@Html.ActionLink("modifier", "Insert", new { id = item.id }, null)</td>
                <td>@Html.ActionLink("supprimer", "Delete", new { id = item.id }, null)</td>
                <td></td>
            </tr>
        }
    }
</table>